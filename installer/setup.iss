#define MyAppName "DTOcean Logistics"
#define MyAppVersion "0.2.0"
#define MyAppPublisher "DTOcean"
#define MyAppURL "http://www.dtocean.eu/"
#define IncludePath "include\dtocean_logistics"

[Setup]
; NOTE: The value of AppId uniquely identifies this application.
; Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{54C4421C-EB34-4D00-A9F3-B37593213A75}
AppName={#MyAppName}
AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
DefaultDirName={sd}\DTOcean
DisableDirPage=yes
DefaultGroupName={#MyAppName}
DisableProgramGroupPage=yes
OutputBaseFilename=dtocean-logistics-data
Compression=lzma
SolidCompression=yes
PrivilegesRequired=lowest

[Languages]
Name: "english"; MessagesFile: "compiler:Default.isl"

[Files]
Source: "..\include\*"; DestDir: "{app}\{#IncludePath}"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "..\dtocean_logistics\config\install.ini"; DestDir: "{commonappdata}\{#MyAppPublisher}\{#MyAppName}"; DestName: "install.ini"; Permissions: users-modify
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
Name: "{group}\{cm:UninstallProgram,{#MyAppName}}"; Filename: "{uninstallexe}"

[INI]
Filename: "{commonappdata}\{#MyAppPublisher}\{#MyAppName}\install.ini"; Section: "dtocean_logistics"; Key: "include_path"; String: "{app}\{#IncludePath}";
